{
  "name": "superwolff",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev:live": "next dev",
    "dev:mocked": "API_MOCKING=enabled next dev",
    "lint:eslint": "eslint --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore --list-different '**/*.{js,css,md,yml,json}'",
    "lint:stylelint": "stylelint --ignore-path .gitignore '**/*.css'",
    "prepare": "husky install",
    "start": "next start",
    "storybook:build": "build-storybook",
    "storybook:start": "start-storybook -p 6006 --quiet",
    "pretest:e2e": "npm run dev:mocked & wait-on -s 1 http://localhost:3000",
    "test:e2e": "cypress open --config-file .cypress/cypress.json",
    "posttest:e2e": "kill-port 3000",
    "test:unit": "jest"
  },
  "dependencies": {
    "@react-hook/debounce": "^3.0.0",
    "@react-hook/size": "^2.1.1",
    "classnames": "^2.3.1",
    "date-fns": "^2.22.0",
    "framer-motion": "^4.1.17",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "next": "^10.2.3",
    "prop-types": "^15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@cloudfour/simple-svg-placeholder": "^1.0.2",
    "@next/eslint-plugin-next": "^10.2.3",
    "@percy/cli": "^1.0.0-beta.52",
    "@percy/cypress": "^3.1.0",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/builder-webpack5": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@testing-library/cypress": "^7.0.6",
    "babel-loader": "^8.2.2",
    "cypress": "^7.4.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sort": "^1.5.0",
    "husky": "^6.0.0",
    "jest": "^27.0.1",
    "kill-port": "^1.6.1",
    "lint-staged": "^11.0.0",
    "msw": "^0.29.0",
    "prettier": "^2.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "wait-on": "^5.3.0"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "**/*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:sort/recommended",
      "plugin:jest/recommended",
      "plugin:cypress/recommended",
      "plugin:@next/next/recommended",
      "prettier"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off",
      "react/jsx-filename-extension": "off",
      "react/react-in-jsx-scope": "off",
      "react/jsx-sort-props": "warn"
    },
    "ignorePatterns": [
      "!.cypress/",
      "!.msw/",
      "!.storybook/"
    ],
    "overrides": [
      {
        "files": [
          "*.stories.js"
        ],
        "rules": {
          "react/jsx-props-no-spreading": "off",
          "import/no-extraneous-dependencies": "off",
          "@next/next/no-img-element": "off"
        }
      },
      {
        "files": [
          ".storybook/**/*.js"
        ],
        "rules": {
          "no-param-reassign": "off",
          "import/prefer-default-export": "off"
        }
      },
      {
        "files": [
          ".msw/**/*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "import/prefer-default-export": "off",
          "global-require": "off"
        }
      },
      {
        "files": [
          ".cypress/**/*.js"
        ],
        "rules": {
          "jest/expect-expect": "off",
          "jest/valid-expect-in-promise": "off",
          "jest/valid-expect": "off",
          "jest/no-identical-title": "off",
          "no-unused-expressions": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/order": [
        "custom-properties",
        "declarations"
      ],
      "order/properties-alphabetical-order": true
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.cypress/"
    ]
  },
  "percy": {
    "version": 2,
    "snapshot": {
      "widths": [
        1280
      ],
      "min-height": 800
    }
  }
}
